<div class="row">
  <div class="header">
    <a
      class="no-link"
      data-toggle="collapse"
      href="#collapseClient{{this._id}}"
      role="button"
      aria-expanded="false"
      aria-controls="collapseClient{{this._id}}"
    >
      {{this.name}}
      {{this.lastName}}
    </a></div>

  <div class="collapse" id="collapseClient{{this._id}}">
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#modifyClientModal{{this._id}}"
    >
      <i class="fas fa-user-edit"></i>
    </button>
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#deleteClientModal{{this._id}}"
    >
      <i class="fas fa-user-times"></i>
    </button>
  </div>
</div>