<div
  class="modal fade"
  id="deleteClientModal{{this._id}}"
  tabindex="-1"
  role="dialog"
  aria-labelledby="deleteClienttModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/delete-client/{{this._id}}" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">¿Seguro qué quieres
            borrar este usuario?</h5>
        </div>
        <div class="modal-body">
          <div class="row">
            <h3>{{this.name}} {{this.lastName}}</h3>
            <i class="far fa-times-circle"></i>
          </div>

        </div>
        <div class="modal-footer">
          <button
            id="submit"
            type="submit"
            class="btn btn-danger"
          >Borrar</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Cerrar</button>

        </div>
      </form>
    </div>
  </div>
</div>